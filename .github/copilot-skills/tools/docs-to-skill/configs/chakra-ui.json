{
  "name": "chakra-ui",
  "description": "Simple, modular and accessible React component library",
  "base_url": "https://chakra-ui.com/docs/",
  "start_urls": ["https://chakra-ui.com/docs/get-started/installation"],
  "max_pages": 150,
  "rate_limit": 1.0,
  "file_patterns": [
    "**/*.tsx",
    "**/*.jsx",
    "**/*.ts",
    "**/package.json"
  ],
  "selectors": {
    "title": "h1, title",
    "main_content": "main, article, div[role='main']",
    "code_blocks": "pre code"
  },
  "url_patterns": {
    "include": ["^https://chakra-ui\\.com/docs/.*"],
    "exclude": ["/blog/.*", "#.*"]
  },
  "categories": {
    "getting_started": ["getting-started", "installation", "setup"],
    "components": ["components"],
    "hooks": ["hooks"],
    "styling": ["style", "theme", "color"],
    "layout": ["layout", "box", "flex", "grid"]
  },
  "checkpoint": {
    "enabled": true,
    "interval": 30
  }
}
