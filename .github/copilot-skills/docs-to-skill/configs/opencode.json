{
  "name": "opencode",
  "description": "Multi-agent orchestration framework for spawning and managing AI sub-agents",
  "base_url": "https://opencode.ai/",
  "start_urls": [
    "https://opencode.ai/docs"
  ],
  "max_pages": 300,
  "rate_limit": 0.5,
  "file_patterns": [
    "**/*.py",
    "**/*.ts",
    "**/*.js",
    "**/agents/**",
    "**/workflows/**"
  ],
  "selectors": {
    "main_content": "main, article, .prose, .docs-content",
    "title": "h1, title, .page-title",
    "code_blocks": "pre code, .code-block code"
  },
  "url_patterns": {
    "include": ["^https://opencode\\.ai/docs/.*"],
    "exclude": ["/blog/.*", "#.*", "/pricing$", "/about$"]
  },
  "categories": {
    "getting_started": ["installation", "quickstart", "getting-started", "setup", "introduction"],
    "agents": ["agent", "sub-agent", "multi-agent", "spawn", "orchestration", "delegation"],
    "workflows": ["workflow", "pipeline", "task", "execution", "parallel"],
    "tools": ["tool", "function", "capability", "integration"],
    "communication": ["communication", "messaging", "event", "callback", "response"],
    "examples": ["example", "tutorial", "guide", "demo", "recipe"],
    "api": ["api", "reference", "method", "class", "interface"],
    "advanced": ["advanced", "optimization", "performance", "scaling", "best-practice"]
  },
  "checkpoint": {
    "enabled": true,
    "interval": 30
  }
}
